<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jasonko.movietime.MovieListOfTheaterInAreaActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XX戲院"
        android:id="@+id/tv_name_of_theater"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:background="#81030041"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30sp">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:text="電話："
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-xxxx-xxxx"
            android:id="@+id/tv_phone_of_theater"
            android:textSize="20sp"
            android:layout_gravity="left|center_vertical"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:text="地址："
            android:id="@+id/textView4"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="台北市松山區XX路X段XXX號"
            android:id="@+id/tv_address_of_theater"
            android:textSize="20sp"
            android:layout_gravity="left|center_vertical"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:id="@+id/recycler_view_movielist_of_theater" />

</LinearLayout>
