<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_comment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:background="@color/movie_indicator"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        ></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/write_comment_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/head_captain"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/write_comment_nickname_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:hint="請輸入暱稱"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:id="@+id/checkbox_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="記下暱稱"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/movie_indicator"
                    android:textSize="17dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(點擊圖示可選擇頭像)"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇標籤"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/message_tag_recycler_view"
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#D4D4D4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="標題"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:id="@+id/write_message_title_edittext"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:hint="ex.好看推推"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="連結網址(如無網址請留空白)"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:id="@+id/write_link_edittext"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:hint="ex.http://www.example.com"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="內容"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/write_comment_content_edittext"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/write_comment_send_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出留言"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
