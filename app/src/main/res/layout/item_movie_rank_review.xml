<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movie_thisweek_image"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/icon_app"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >


                <TextView
                    android:id="@+id/movierank_num_text"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="1"
                    android:textSize="17dp"
                    android:background="@drawable/circle_style"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111人留言"
                    android:textColor="@color/movie_indicator"
                    android:layout_marginLeft="5dp"
                    android:textSize="22dp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/movie_thisweek_class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="護"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:background="@drawable/class_red_selector"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/movie_thisweek_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="不可能的任務：失控國度"
                    android:gravity="center_vertical"
                    android:textSize="22dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:layout_marginLeft="0dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/movie_thisweek_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="動作、懸疑/驚悚、冒險"
                android:textSize="15dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />



            <TextView
                android:id="@+id/movie_thisweek_publish_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上映日期：2015/09/03"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_user_point"
                    android:text="7分"
                    android:textSize="17dp"
                    android:textColor="@color/movie_indicator"
                    />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_marginTop="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:rating="2.5"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/movie_indicator"
                    android:secondaryProgressTint="@color/white"
                    android:isIndicator="true"
                    android:layout_marginLeft="2dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

