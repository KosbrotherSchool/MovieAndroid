<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movierank_week_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/icon_app"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/movierank_week_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="第34週"
                    android:textSize="15dp"
                    android:background="@drawable/movietime_area_style"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/movierank_week_duration_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2015-08-22 ~ 08-23"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/movierank_week_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不可能的任務：失控國度"
                android:textSize="17dp"
                android:maxLines="1"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/movierank_week_actors_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="湯姆克魯斯、傑瑞米雷納、賽門佩吉、文雷姆斯"
                android:textSize="15dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/movierank_week_publish_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上映週數：2  保護級"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>