<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movie_thisweek_image"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/icon_app"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/movie_thisweek_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不可能的任務：失控國度"
                android:gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:textSize="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#000000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/movie_thisweek_class_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="護"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:background="@drawable/class_red_selector"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/movie_thisweek_eng_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mission Impossible"
                    android:textSize="18dp"
                    android:maxLines="1"
                    />


            </LinearLayout>



            <TextView
                android:id="@+id/movie_thisweek_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="動作、懸疑/驚悚、冒險"
                android:textSize="15dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />


            <TextView
                android:id="@+id/movie_thisweek_actors_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="湯姆克魯斯、傑瑞米雷納、賽門佩吉、文雷姆斯"
                android:textSize="15dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/movie_thisweek_publish_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上映日期：2015/09/03"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>