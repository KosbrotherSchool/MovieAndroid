<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/movie_thisweek_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/icon_app"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/movie_thisweek_new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="New"
                    android:background="@drawable/movietime_area_style"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/movie_thisweek_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="不可能的任務：失控國度"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textSize="17dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/movie_thisweek_publish_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上映日期：2015/09/03  保護級"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/movie_thisweek_actors_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="湯姆克魯斯、傑瑞米雷納、賽門佩吉、文雷姆斯"
                android:textSize="13dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/movie_thisweek_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="動作、懸疑/驚悚、冒險"
                android:textSize="13dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>